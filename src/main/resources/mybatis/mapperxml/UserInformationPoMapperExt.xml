<select id="infoselectByUserkey" parameterType="java.lang.Long" resultMap="InfoResultMap">
    select
    i.INF_NUM,
    i.INF_SIGNATURE,
    i.INF_ACADEMY,
    i.INF_MAJOR,
    i.INF_CLASS,
    i.INF_SEX,
    i.INF_LOCALTION,
    i.INF_AGE,
    u.USER_NAME,
    u.USER_EMAIL,
    u.USER_PHONE
    from `tbl_user_information` i
    left join `tbl_user` u on i.USER_KEY = u.USER_ID
    where USER_KEY = #{userkey,jdbcType=BIGINT}
</select>
